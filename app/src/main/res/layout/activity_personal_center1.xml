<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj0"
    android:orientation="vertical"
    tools:context=".MeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >

        <TextView
            android:id="@+id/me_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <ImageView
                android:id="@+id/me_head_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/gfmv" />

            <TextView
                android:id="@+id/me_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="125dp"
                android:layout_toRightOf="@+id/me_head_image"
                android:paddingLeft="20dp"
                android:text="用户名：马文菲"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/me_idtel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/me_nickname"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/me_head_image"
                android:paddingLeft="20dp"
                android:text="ID:mawenfei"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_student_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/btn_my_goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/whitesmoke"
            android:gravity="fill"
            android:paddingLeft="10dp"
            android:text="我的上传"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/l1"
            android:layout_below="@+id/btn_my_goods"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitesmoke" />

        <Button
            android:id="@+id/me_person_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_marginTop="23dp"
            android:background="@color/whitesmoke"
            android:gravity="fill"
            android:paddingLeft="10dp"
            android:text="个人中心"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_my_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l1"
            android:layout_marginTop="16dp"
            android:background="@color/whitesmoke"
            android:gravity="fill"
            android:paddingLeft="10dp"
            android:text="我的收藏"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/l2"
            android:layout_below="@+id/btn_my_collection"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/whitesmoke" />



        <Button
            android:id="@+id/me_about_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_person_btn"
            android:layout_marginTop="20dp"
            android:background="@color/whitesmoke"
            android:paddingLeft="10dp"
            android:gravity="fill"
            android:text="关于"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/me_about_btn"
            android:layout_marginTop="20dp"
            android:background="@color/whitesmoke"
            android:paddingLeft="10dp"
            android:gravity="fill"
            android:text="返回"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_back"
            android:layout_marginTop="20dp"
            android:background="@color/whitesmoke"
            android:paddingLeft="10dp"
            android:gravity="fill"
            android:text="退出登录"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </RelativeLayout>


</LinearLayout>